{
  "rules": {
    "usernames": {
      ".read": true,
      "$username": {
        ".write": "auth != null",
        ".validate": "(!data.exists() && newData.val() === auth.uid) || (data.val() === auth.uid && (!newData.exists() || newData.val() === auth.uid))"
      }
    },
    "userSearchIndex": {
      ".read": true,
      ".indexOn": ["username", "displayName"],
      "$uid": {
         ".write": "$uid === auth.uid"
      }
    },
    "users": {
      "$uid": {
        "profile": {
          ".read": true,
          ".write": "$uid === auth.uid"
        },
        "movies": {
          ".read": "$uid === auth.uid || root.child('users').child($uid).child('settings').child('privacy').child('friendsVisibility').val() === 'public' || (auth != null && root.child('users').child($uid).child('settings').child('privacy').child('friendsVisibility').val() !== 'noone' && root.child('users').child($uid).child('friends').child(auth.uid).val() === true)",
          ".write": "$uid === auth.uid"
        },
        "history": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          ".indexOn": ["timestamp", "movieId"]
        },
        "settings": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "privacy": {
            ".read": true,
            ".write": "$uid === auth.uid"
          }
        },
        "friends": {
          ".read": "$uid === auth.uid || root.child('users').child($uid).child('settings').child('privacy').child('friendsVisibility').val() === 'public' || (auth != null && root.child('users').child($uid).child('settings').child('privacy').child('friendsVisibility').val() !== 'noone' && root.child('users').child($uid).child('friends').child(auth.uid).val() === true)",
          "$friendUid": {
            ".write": "$uid === auth.uid || (auth.uid === $friendUid && ((newData.val() === true && root.child('users').child(auth.uid).child('friendRequests').child($uid).exists()) || (!newData.exists() && data.exists())))"
          }
        },
        "friendRequests": {
          ".read": "$uid === auth.uid",
          "$senderUid": {
            ".write": "(auth.uid === $senderUid && !data.exists()) || $uid === auth.uid"
          }
        }
      }
    }
  }
}
